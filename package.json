{
  "name": "@mvsde/mailbox",
  "version": "0.5.0",
  "description": "Small wrapper around MJML and Nodemailer for (awesome) HTML emails",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --format codeframe \"**/*.js\"",
    "test:create": "node bin/mailbox create test/create",
    "test:dev": "cd template && node ../bin/mailbox dev",
    "test:build": "cd template && node ../bin/mailbox build",
    "test:test": "cd template && node ../bin/mailbox test",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/mailbox"
  },
  "keywords": [
    "email",
    "html",
    "mjml",
    "nodemailer",
    "nunjucks"
  ],
  "author": "Fynn Becker <post@fynn.be>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mvsde/mailbox/issues"
  },
  "homepage": "https://github.com/mvsde/mailbox#readme",
  "bin": "bin/mailbox.js",
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^3.0.2",
    "consola": "^2.10.1",
    "deepmerge": "^4.0.0",
    "fs-extra": "^8.1.0",
    "mjml": "^4.4.1",
    "nodemailer": "^6.3.0",
    "nunjucks": "^3.2.0",
    "ws": "^7.1.2",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "eslint": "^6.2.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^10.0.0",
    "standard-version": "^7.0.0"
  }
}
