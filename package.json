  "bin": "bin/mailbox.js",
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^2.1.5",
    "consola": "^2.6.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "lodash.merge": "^4.6.1",
    "mjml": "^4.4.0-beta.1",
    "nodemailer": "^6.1.1",
