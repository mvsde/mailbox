{
  "name": "@mvsde/mailbox",
  "version": "0.6.1",
  "description": "Small wrapper around MJML and Nodemailer for (awesome) HTML emails",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --format codeframe --cache \"**/*.js\"",
    "test:unit": "nyc ava --verbose",
    "test:create": "node bin/mailbox create test/create",
    "test:dev": "cd template && node ../bin/mailbox dev",
    "test:build": "cd template && node ../bin/mailbox build",
    "test:test": "cd template && node ../bin/mailbox test",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/mailbox"
  },
  "keywords": [
    "email",
    "html",
    "mjml",
    "nodemailer",
    "nunjucks"
  ],
  "author": "Fynn Becker <post@fynn.be>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mvsde/mailbox/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mvsde/mailbox#readme",
  "bin": "bin/mailbox.js",
  "dependencies": {
    "chokidar": "^3.3.1",
    "commander": "^4.1.1",
    "deepmerge": "^4.2.2",
    "kleur": "^3.0.3",
    "mjml": "^4.5.1",
    "nodemailer": "^6.4.2",
    "nunjucks": "^3.2.0",
    "prompts": "^2.3.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "ava": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.0.0",
    "nyc": "^15.0.0",
    "standard-version": "^7.1.0"
  }
}
